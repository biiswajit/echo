{
  "name": "@echo/database",
  "version": "0.0.0",
  "description": "",
  "main": "./dist/prisma.js",
  "exports": {
    ".": {
      "types": "./src/prisma.ts",
      "default": "./dist/prisma.js"
    }
  },
  "scripts": {
    "clean": "rm -rf ./dist && tsc --build --clean",
    "build": "tsc --build",
    "db:generate": "prisma generate --schema ./schema",
    "db:migrate": "prisma migrate dev --schema ./schema",
    "db:deploy": "prisma migrate deploy",
    "db:reset": "prisma migrate reset --schema ./schema",
    "check-types": "tsc --noEmit"
  },
  "devDependencies": {
    "@echo/typescript-config": "workspace:*",
    "@types/node": "^22.13.9",
    "prisma": "^6.4.1",
    "typescript": "^5.8.2"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.4.1"
  }
}